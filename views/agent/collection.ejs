    <a href="/agent/collections/pending"> 
		<i class='fas fa-arrow-alt-circle-left' style='font-size:24px;color:#707070;'></i>
		
	</a>
    <h1>collection</h1>
    <font size="+1">
    <div class="mydiv1">
       <font face="Poppins"> 
        
        <div class="mb-2">
            <span>Name:</span>
            <span><%= collection.donor.firstName + " " + collection.donor.lastName  %></span>
        </div>
        
        <div class="mb-2">
            <span>Phone No.:</span>
            <span><%= collection.phone %></span>
        </div>
        
        <div class="mb-2">
            <span>Address:</span>
            <span><%= collection.address %></span>
    
        </div>

        <div class="mb-2">
            <span>Quantity:</span>
            <span><%= collection.quantity %></span>
        </div>
        
        <div class="mb-2">
            <span>Food type::</span>
            <span><%= collection.foodtype %></span>
        </div>
        <div class="mb-2">
            <span>Date:</span>
            <span><%= collection.pickupDate %></span>
        </div>
        <div class="mb-2">
            <span>Time of Pickup:</span>
            <span><%= collection.pickupTime %></span>
        </div>
        <div class="mb-2">
            <span>Status:</span>
            <span class="fw-bold text-<%= collection.status %>"><%= collection.status %></span>
        </div>
        <a href="" class="btn">Collect</a>
			<% if(collection.status == "assigned" && collection.adminToAgentMsg != "") { %>
				<div class="mb-2">
					<span>Message from Admin:</span>
					<div class="ms-3"><%= collection.adminToAgentMsg %></div>
				</div>
			<% } %>
			
		</div>
		
	</div>
